

<header>
    <div id="logo">
        <h1 id="logo-heading">
            <i class="fas fa-laptop-code"></i> CODEIAL
        </h1>
    </div>
    <div id='sign'>
        <ul>
            <% if(locals.user) { %>
                <li>
                    <a href="/users/profile"> <%= user.name %> </a>
                </li>
                <li>|</li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <% } else { %>
                <li id="sign-in">
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>|</li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
            <% } %>
        </ul>
    </div>

</header>